<% if (title) { %>
    <h1 class="inside-h1"><%= title %></h1>
<% } else {
      res.redirect('/')
} %>

<%- messages() %>

<div class="form-container">
    <form>
        <div class="input-block">
            <label for="account_email">Email:</label>
            <input type="email" id="account_email" name="account_email" placeholder="Enter your email" required>
        </div>
        <div class="input-block">
            <label for="account_password">Password:</label>
            <input type="password" id="account_password" name="account_password" placeholder="Enter your password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
            <span id="pswdBtn">Show Password</span>
            <div class="password-info">
                <p>There must be at least 12 characters, one must be a number, one must be a lowercase letter, one must be a capital letter, and one must be a non-alphanumeric character.</p>
             </div>
        </div>
        <button type="submit" class="btn btn-secondary">Login</button>
    </form>
    <p>No account? <a href="/account/register">Sign-up</a></p>
</div>

<% if (message) { %>
    <p><%= message %></p>
<% } %>